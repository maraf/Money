@typeparam TType

<div class="sort dropdown">
    <button class="@ButtonCssClass" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        @if (Icon != null)
        {
            <Icon Identifier="@Icon" Prefix="@IconPrefix" class="me-1" />
            <span class="d-none d-md-inline">
                @Text
            </span>
        }
        else
        {
            @Text
        }
        <span class="caret"></span>
    </button>

    <div class="dropdown-menu dropdown-menu-end">
        @foreach (var item in Items)
        {
            <a class="dropdown-item @(item.Value.Equals(Current) ? "active" : null)" @onclick="@(() => OnItemClick(item.Value))">
                @item.Name
            </a>
        }
    </div>
</div>