@inherits ModalDialog

<Modal @ref="Modal" Title="Change when the income occured">
    <ChildContent>
        <div class="mb-3">
            <label class="form-label" for="income-when">When:</label>
            <DateBox Id="income-when" @bind-Value="When" AutoFocus="true" />
        </div>
    </ChildContent>
    <Buttons>
        <button class="btn btn-primary" @onclick="@OnSaveClick">Save</button>
    </Buttons>
</Modal>
