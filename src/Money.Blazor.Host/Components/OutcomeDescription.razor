@inherits ModalDialog

<Modal @ref="Modal" Title="Change a description of the expense">
    <ChildContent>
        <Validation ErrorMessages="@ErrorMessages" />
        <div class="mb-3">
            <label for="expense-description">Description:</label>
            <input type="text" class="form-control" id="expense-description" placeholder="Expense Description" data-autofocus @bind="@Description" />
        </div>
    </ChildContent>
    <Buttons>
        <button class="btn btn-primary" @onclick="@OnSaveClick">Save</button>
    </Buttons>
</Modal>
