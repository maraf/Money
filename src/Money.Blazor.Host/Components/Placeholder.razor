@if (IsActive)
{
    @if (PlaceholderContent != null)
    {
        @PlaceholderContent(activeContext)
    }
    else
    {
        @foreach(var length in WordLengths)
        {
            <span class="placeholder col-@length @CssClass"></span>
            @(" ")
        }
    }
}
else
{
    @ChildContent
}
