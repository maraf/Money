@inherits LayoutComponentBase
@inject Navigator Navigator

<div class="fixed-top bg-body">
    <nav class="navbar navbar-expand-sm navbar-dark">
        <div class="container flex-nowrap">
            <MainMenu />
            <TemplatePlaceholder Name="MobilePageIcon" />
            <div class="mobile-page-title text-light flex-grow-1 d-block d-sm-none overflow-hidden pe-1">
                <TemplatePlaceholder Name="MobilePageTitle" />
            </div>
            <TemplatePlaceholder Name="MobilePageActions" />
        </div>
    </nav>
    <TemplatePlaceholder Name="FixedTop" />
</div>
<div class="container body-content">
    <TemplatePlaceholder Name="PreContent" />

    @Body
</div>
<AuthenticatedView>
    <BottomMenu />
</AuthenticatedView>

<footer class="navbar navbar-light d-none d-sm-block">
    <div class="container">
        <span class="navbar-text">
            <small>
                &copy; 2021
                &#8226; <a href="@Navigator.UrlMoneyProject()" target="_blank">Money</a> by <a href="https://www.neptuo.com" target="_blank">Neptuo</a>
            </small>
        </span>
        <span class="navbar-text text-end">
            <small>
                <span class="versions">
                    <AppVersion />

                    &#8226;
                </span>

                <a href="@Navigator.UrlGithubRepositoryIssueNew()" target="_blank">
                    Report a bug
                    <Icon Identifier="bug" />
                </a>
            </small>
        </span>
    </div>
</footer>
